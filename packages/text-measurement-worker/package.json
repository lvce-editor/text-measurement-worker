{
  "name": "@lvce-editor/text-measurement-worker",
  "version": "0.0.0-dev",
  "description": "Web Worker for the completion widget in Lvce Editor",
  "repository": {
    "type": "git",
    "url": "git@github.com:lvce-editor/text-measurement-worker.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/textMeasurementWorkerMain.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@lvce-editor/assert": "^1.4.0",
    "@lvce-editor/rpc": "^4.19.0",
    "@lvce-editor/rpc-registry": "3.8.0",
    "@lvce-editor/verror": "^1.7.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2"
  }
}
