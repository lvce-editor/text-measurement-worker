{
  "name": "@lvce-editor/text-measurement-worker",
  "version": "0.0.0-dev",
  "description": "Web Worker for the completion widget in Lvce Editor",
  "repository": {
    "type": "git",
    "url": "git@github.com:lvce-editor/text-measurement-worker.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/textMeasurementWorkerMain.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@lvce-editor/fuzzy-search": "^1.1.0",
    "@lvce-editor/i18n": "^1.1.0",
    "@lvce-editor/list": "^1.3.0",
    "@lvce-editor/rpc": "^4.19.0",
    "@lvce-editor/rpc-registry": "3.8.0",
    "@lvce-editor/viewlet-registry": "^1.4.0",
    "@lvce-editor/virtual-dom-worker": "^3.1.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2"
  }
}
